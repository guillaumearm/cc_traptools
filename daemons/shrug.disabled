local chat = chatbox.create()

chat.listen(function(user, message)
  if string.find(message, '\\shrug') ~= nil then
    chat.sendFormattedMessage({
      text = '¯\\_(?)_/¯',
      color = "gray"
    }, user)
  end
end)

print('shrug daemon started!')
chat.start()
print('shrug daemon stopped!')
